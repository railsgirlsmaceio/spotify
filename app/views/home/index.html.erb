<div class="home">
    <div class="home-logo">
        <a href="/">
            <img alt="Spotify" class="logo-spotify" src="http://www.clker.com/cliparts/5/c/a/f/141490005811489798026274.spotify-logo-horizontal-white-rgb-hi.png">
        </a>
    </div>
    <%= form_tag artists_path, method: "get", class: "form-home" do %>
        <div class="form">
            <%= text_field_tag(:artist_name, "", placeholder: "Procurar um artistas?") %>
            <%= submit_tag "Procurar", class: "btn" %>
        </div>
    <% end %>
</div>
